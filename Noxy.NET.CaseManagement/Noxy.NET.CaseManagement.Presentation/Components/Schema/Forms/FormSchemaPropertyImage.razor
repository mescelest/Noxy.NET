@inherits BaseComponentTextFormSchema<FormModelSchemaPropertyImage, EntitySchemaPropertyImage>

<div @attributes="AdditionalAttributes" class="@CssClass">
    <TemplateSchemaForm Context="Context" FormSubmit="context => FormSubmit(context.Model)">
        <Header>
            @HeaderText
        </Header>
        
        <Content>
            <InputGroupText DisplayName="@GetDisplayName(nameof(Context.Model.SchemaIdentifier))" Description="@GetDescription(nameof(Context.Model.SchemaIdentifier))" @bind-Value="Context.Model.SchemaIdentifier"/>
            <InputGroupText DisplayName="@GetDisplayName(nameof(Context.Model.Name))" Description="@GetDescription(nameof(Context.Model.Name))" @bind-Value="Context.Model.Name"/>
            <InputGroupTextArea DisplayName="@GetDisplayName(nameof(Context.Model.Note))" Description="@GetDescription(nameof(Context.Model.Note))" @bind-Value="Context.Model.Note"/>
            <InputGroupText DisplayName="@GetDisplayName(nameof(Context.Model.AllowedExtensions))" Description="@GetDescription(nameof(Context.Model.AllowedExtensions))" @bind-Value="Context.Model.AllowedExtensions"/>
            <InputGroupSelect DisplayName="@GetDisplayName(nameof(Context.Model.TitleDynamicID))" Description="@GetDescription(nameof(Context.Model.TitleDynamicID))" OptionList="OptionList" @bind-Value="Context.Model.TitleDynamicID">
                <span>@GetOptionName(context)</span>
            </InputGroupSelect>
            <InputGroupSelect DisplayName="@GetDisplayName(nameof(Context.Model.DescriptionDynamicID))" Description="@GetDescription(nameof(Context.Model.DescriptionDynamicID))" OptionList="OptionList" @bind-Value="Context.Model.DescriptionDynamicID">
                <span>@GetOptionName(context)</span>
            </InputGroupSelect>
            <InputGroupSelect DisplayName="@GetDisplayName(nameof(Context.Model.DefaultValueDynamicID))" Description="@GetDescription(nameof(Context.Model.DefaultValueDynamicID))" OptionList="OptionList" @bind-Value="Context.Model.DefaultValueDynamicID">
                <span>@GetOptionName(context)</span>
            </InputGroupSelect>
            <InputGroupSelect DisplayName="@GetDisplayName(nameof(Context.Model.WidthDynamicID))" Description="@GetDescription(nameof(Context.Model.WidthDynamicID))" OptionList="OptionList" @bind-Value="Context.Model.WidthDynamicID">
                <span>@GetOptionName(context)</span>
            </InputGroupSelect>
            <InputGroupSelect DisplayName="@GetDisplayName(nameof(Context.Model.HeightDynamicID))" Description="@GetDescription(nameof(Context.Model.HeightDynamicID))" OptionList="OptionList" @bind-Value="Context.Model.HeightDynamicID">
                <span>@GetOptionName(context)</span>
            </InputGroupSelect>
        </Content>
        
        <Actions>
            <Button Loading="Context.IsSubmitting" Status="StatusEnum.Success" type="submit">
                @SubmitText
            </Button>
        </Actions>
    </TemplateSchemaForm>
</div>

@code {

    private string HeaderText => Context.Model.ID != Guid.Empty ? TextConstants.UpdateFormHeaderEntitySchemaPropertyBoolean : TextConstants.CreateFormHeaderEntitySchemaPropertyBoolean;
    private IEnumerable<Guid> OptionList => (Schema.DynamicValueList?.Select(x => x.ID) ?? []).Append(Guid.Empty);

    private string GetOptionName(Guid? id)
    {
        return Schema.DynamicValueList?.FirstOrDefault(x => x.ID == id)?.GetValue().Name ?? string.Empty;
    }
    
    protected override WebFormContext<FormModelSchemaPropertyImage> CreateContext()
    {
        return new(new(Value){ SchemaID = Schema.ID });
    }

}
