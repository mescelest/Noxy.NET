@inherits BaseInputTextualValue<string>

<textarea @attributes="AdditionalAttributes" id="@IDCurrent" class="@CssClass" cols="@SizeCurrent" rows="@RowsCurrent" @onchange="OnValueChange">
    @Value
</textarea>

@code {

    [Parameter]
    public int? Rows { get; set; }
    private int RowsCurrent => Rows ?? 6;

    [JSInvokable]
    public override void OnValueInput(string value)
    {
        NotifyChange(value);
    }

    protected override void OnValueChange(ChangeEventArgs args)
    {
        NotifyChange(args.Value?.ToString() ?? string.Empty);
    }

}

