@inherits BaseInputTextual<string>

<input @attributes="AdditionalAttributes" class="@CssClass" ID="@IDCurrent" Name="@GetName()" type="password" autocomplete="@Autocomplete?.ToAttributeValue()" size="@SizeCurrent" value="@Value" @onchange="OnValueChange"/>

@code {

    [Parameter]
    public WebFormInputFieldPasswordAutocompleteEnum? Autocomplete { get; set; }

    [JSInvokable]
    public override void OnValueInput(string value)
    {
        NotifyChange(value);
    }

    protected override void OnValueChange(ChangeEventArgs args)
    {
        NotifyChange(args.Value?.ToString() ?? string.Empty);
    }

}
