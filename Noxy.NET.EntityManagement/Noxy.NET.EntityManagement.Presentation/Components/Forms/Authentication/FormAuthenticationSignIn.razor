@inherits BaseRequestForm<RequestAuthenticationSignIn, ResponseAuthenticationSignIn>

<div @attributes="AdditionalAttributes" class="@CssClass">
    <WebForm Context="Context" OnSubmit="OnSubmit">
        <InputGroupText DisplayName="@GetDisplayName(nameof(Context.Model.Email))" Description="@GetDescription(nameof(Context.Model.Email))"
                        @bind-Value="Context.Model.Email"/>

        <InputGroupPassword DisplayName="@GetDisplayName(nameof(Context.Model.Password))" Description="@GetDescription(nameof(Context.Model.Password))"
                            Autocomplete="WebFormInputFieldPasswordAutocompleteEnum.CurrentPassword" @bind-Value="Context.Model.Password"/>

        @ChildContent
    </WebForm>
</div>

@code {

    protected override WebFormContext<RequestAuthenticationSignIn> CreateContext()
    {
        return new(new());
    }

}
